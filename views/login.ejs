  <main id="main ">

    <section class="inner-page ">
      <div class="container d-flex justify-content-center align-items-center flex-column">
        <h1 class="loginLogo text-center"><a href="index.html">duatone</a></h1>
        <h2 class="text-center signInText">Please Sign In</h2>
        <div class="col-lg-4 mt-4 mt-lg-0" data-aos="fade-left" data-aos-delay="200">
          
        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
        <% } %>

      <!-- LOGIN FORM -->
      <form class = "loginForm" action="/login" method="post">
          <div class="form-group">
              <label>Email/Username</label>
              <input type="text" class="form-control" name="email" placeholder="example@example.com">
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" placeholder="#$tr0ngPa33word!">
          </div>

          <button type="submit" class='get-started-btn cred-btn'>Login</button>
      </form>

      <hr>

      <p>Need an account?</p>
      <a href="/signup"><button type="submit" class='get-started-btn signup cred-btn'>Signup</button></a>

      <p>Or go <a href="/">home</a>.</p>
